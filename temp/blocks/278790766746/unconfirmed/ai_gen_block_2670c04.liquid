{% doc %}
  @prompt
    Create a custom image logo block for the header section that allows merchants to upload and display a logo image. The block should include settings for logo width/size adjustment, and should work well with the existing header layout. The logo should be clickable and link to the homepage.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-logo-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-header-logo__link-{{ ai_gen_id }} {
    display: inline-block;
    line-height: 0;
    text-decoration: none;
  }

  .ai-header-logo__image-wrapper-{{ ai_gen_id }} {
    display: inline-block;
    max-width: {{ block.settings.logo_width }}px;
    width: 100%;
  }

  .ai-header-logo__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-header-logo__placeholder-{{ ai_gen_id }} {
    display: inline-block;
    max-width: {{ block.settings.logo_width }}px;
    width: 100%;
    background-color: #f4f4f4;
    border-radius: 4px;
    position: relative;
  }

  .ai-header-logo__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-header-logo__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 12px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
    white-space: nowrap;
  }

  @media screen and (max-width: 749px) {
    .ai-header-logo__image-wrapper-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width_mobile }}px;
    }

    .ai-header-logo__placeholder-{{ ai_gen_id }} {
      max-width: {{ block.settings.logo_width_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-header-logo-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <a href="{{ routes.root_url }}" class="ai-header-logo__link-{{ ai_gen_id }}">
    {% if block.settings.logo %}
      <div class="ai-header-logo__image-wrapper-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.logo | image_url: width: 600 }}"
          alt="{{ shop.name | escape }}"
          width="{{ block.settings.logo.width }}"
          height="{{ block.settings.logo.height }}"
          loading="eager"
          class="ai-header-logo__image-{{ ai_gen_id }}"
        >
      </div>
    {% else %}
      <div class="ai-header-logo__placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-header-logo__empty-state-{{ ai_gen_id }}">
          Add your logo
        </div>
      </div>
    {% endif %}
  </a>
</div>

{% schema %}
{
  "name": "Logo image",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Desktop width",
      "min": 50,
      "max": 300,
      "step": 10,
      "unit": "px",
      "default": 150
    },
    {
      "type": "range",
      "id": "logo_width_mobile",
      "label": "Mobile width",
      "min": 40,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Logo image"
    }
  ]
}
{% endschema %}
